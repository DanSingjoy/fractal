{
  "name": "ordao-sys-op-sepolia-1",
  "version": "1.0.0",
  "description": "Scripts for running / managing deployment of ORDAO on OP Sepolia",
  "main": "index.js",
  "type": "module",
  "config": {
    "respect1155": "../../../respect1155/sc/",
    "orec": "../../../orec/",
    "ordao_tests": "./",
    "ts_utils": "../../../ts-utils",
    "ortypes": "../../../ortypes",
    "orclient": "../../../orclient",
    "ornode": "../../../ornode",
    "ordao_gui": "../../gui",
    "ordao_console": "../../console",
    "ornode_to_cfg_path": "../ordao/sys/dev/tmp/ornode-dev-cfg.json",
    "sc_deployment": "../../sc-deployment/",
    "sc_deployment_to_params": "../sys/op-sepolia-1/deployment-params.json",
    "dev": "../dev/",
    "ornode_to_local_cfg_path": "../ordao/sys/op-sepolia-1/ornode-cfg.local.json",
    "ornode_to_home1_cfg_path": "../ordao/sys/op-sepolia-1/ornode-cfg.ornode-home-1.json"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build-console-local": "node src/buildConsoleLocal.js",
    "build-gui-local": "node src/buildGuiLocal.js",
    "build-console": "node src/buildConsole.js",
    "build-gui": "node src/buildGui.js",
    "build-ornode": "cd $npm_package_config_dev && npm run build-ornode",
    "build-all": "cd $npm_package_config_dev && npm run build-all",
    "build": "cd $npm_package_config_dev && npm run build && cd - && npm run build-console && npm run build-gui",
    "build-local": "cd $npm_package_config_dev && npm run build && cd - && npm run build-console-local && npm run build-gui-local",
    "setup-local": "npm install && cd $npm_package_config_dev && npm run setup && cd - && npm run build-console-local && npm run build-gui-local",
    "setup": "npm install && cd $npm_package_config_dev && npm run setup && cd - && npm run build-console && npm run build-gui",
    "ornode-local": "node src/runOrnodeLocal.js",
    "console-local": "cd $npm_package_config_ordao_console && npm run preview build/op-sepolia-1-local -- --port 5173",
    "gui-local": "cd $npm_package_config_ordao_gui && npm run preview -- --port 5175",
    "ornode": "node src/runOrnode.js",
    "console": "cd $npm_package_config_ordao_console && npx http-server build/op-sepolia-1/dist/ -p 8080 -a localhost",
    "gui": "cd $npm_package_config_ordao_gui && npx http-server dist/ -p 9020 -a localhost",
    "ornode-swagger-ui": "cd $npm_package_config_ornode && ORNODE_CFG_PATH=$npm_package_config_ornode_to_home1_cfg_path npm run swagger-ui"
  },
  "author": "sim31",
  "license": "GPL-3.0",
  "dependencies": {
    "jsonfile": "^6.1.0",
    "shelljs": "^0.8.5"
  }
}
